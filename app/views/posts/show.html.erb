
<section class = 'appearance-none'>
<h1 class = "text-3xl font-medium">Single post to a given user</h1>
      <h2>
      Post #<%= @post.id %> by <%= @user.name %>
      </h2>
        <span>Comments: <%= @post.comments_counter %></span>
        <span>, Likes: <%= @post.likes_counter %></span>
    
      <p class ='text-3xl font-medium'> <%= @post.text %></p>
    
    <% @post.most_recent_comments.each_with_index do |comment| %>
      <p><%= "#{comment.author.name}: #{comment.text}" %></p>
    <% end %>

</section>
