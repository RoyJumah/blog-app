
<div class="bg-white rounded-lg shadow-lg p-6 max-w-md container mx-auto p-8">
<h1 class = "text-3xl font-medium text-center mb-4">List of users</h1>
<% @users.each do |user| %>        
  <a href= <%= "users/#{user.id}"%>>
  <div class ="flex items-center gap-4">
      <%= image_tag(user.photo)%>
        <h2 class ="text-3xl font-normal"> <%= user.name %></h2>
        <span class ='text-2xl text-gray-500'>
        Number of posts:
        <%= user.posts_counter || 0 %>
        </span>
          </div>
      </a> 

    <% end %>
</div>