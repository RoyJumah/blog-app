




<section class ="appearance-none">
<h1 class = "text-3xl font-medium text-center mb-4">List of users</h1>
<% @users.each do |user| %>        
  <a href= <%= "users/#{user.id}"%>>
  <div class ="flex items-center gap-4">
      <%= image_tag(user.photo)%>
        <h2 class ="text-2xl"> <%= user.name %></h2>
          Number of posts:
          <%= user.posts_counter || 0 %>
          </div>
      </a> 

    <% end %>
</section>