<div class="max-w-md mx-auto">
  <h2 class="text-xl font-medium mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 placeholder-gray-400 text-gray-700 bg-white rounded-lg focus:outline-none focus:shadow-outline-gray focus:border-gray-300", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Send me reset password instructions", class: "bg-blue-500 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline-blue focus:border-blue-700" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
