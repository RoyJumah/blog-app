<div class="p-4 bg-white rounded-md shadow-md">
  <h2 class="text-lg font-medium mb-4">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New password", class: "block font-medium mb-2" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full rounded-md border-gray-300 px-3 py-2 mt-1" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: "block font-medium mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-md border-gray-300 px-3 py-2 mt-1" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-md py-2 px-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
